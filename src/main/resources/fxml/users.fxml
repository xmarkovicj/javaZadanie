<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.markovic.javazadanie.fx.UsersController"
            stylesheets="@theme-dark.css"
            styleClass="root-pane">

    <top>
        <VBox spacing="8">
            <padding>
                <Insets top="12" right="16" bottom="8" left="16"/>
            </padding>
            <Label text="Používatelia" styleClass="title-label"/>
            <HBox spacing="8" alignment="CENTER_LEFT">
                <TextField fx:id="searchField"
                           promptText="Filter podľa mena alebo e-mailu"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Nový používateľ"
                        onAction="#onCreateUser"
                        styleClass="primary-button"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="4" right="16" bottom="16" left="16"/>
            </padding>

            <TableView fx:id="usersTable" prefHeight="340">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colName" text="Meno" prefWidth="160"/>
                    <TableColumn fx:id="colEmail" text="E-mail" prefWidth="220"/>
                    <TableColumn fx:id="colCreated" text="Vytvorený" prefWidth="160"/>
                    <TableColumn fx:id="colActions" text="Akcie" prefWidth="120"/>
                </columns>
            </TableView>

            <HBox spacing="8" alignment="CENTER_RIGHT">
                <Label fx:id="statusLabel" styleClass="status-label" text=""/>
                <Label fx:id="errorLabel" styleClass="error-label" text=""/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="8">
            <padding>
                <Insets top="6" right="16" bottom="10" left="16"/>
            </padding>
            <Button text="Zavrieť"
                    onAction="#onClose"
                    styleClass="secondary-button"/>
        </HBox>
    </bottom>

</BorderPane>
