<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.markovic.javazadanie.fx.UsersController">

    <top>
        <VBox spacing="8.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

            <Label text="Users" />

            <HBox spacing="8.0">
                <TextField fx:id="searchField" promptText="Filter by name/email"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Refresh" onAction="#onRefresh"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <TableView fx:id="usersTable">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60.0"/>
                <TableColumn fx:id="colName" text="Name" prefWidth="150.0"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="200.0"/>
                <TableColumn fx:id="colCreated" text="Created" prefWidth="180.0"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="8.0">
            <padding>
                <Insets top="8.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

            <!-- create user -->
            <HBox spacing="8.0">
                <TextField fx:id="nameField" promptText="Name"/>
                <TextField fx:id="emailField" promptText="Email"/>
                <PasswordField fx:id="passwordField" promptText="Password"/>
                <Button text="Create" onAction="#onCreateUser"/>
            </HBox>

            <!-- bottom row -->
            <HBox spacing="8.0" alignment="CENTER_RIGHT">
                <Label fx:id="statusLabel" text="No users loaded"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Delete selected" onAction="#onDeleteSelected"/>
                <Button text="Close" onAction="#onClose"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
