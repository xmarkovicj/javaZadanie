<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.markovic.javazadanie.fx.LoginController"
            stylesheets="@app-dark.css"
            styleClass="root-pane">

    <center>
        <HBox spacing="40">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Left "branding" side -->
            <VBox spacing="12">
                <Label text="StudyHub"
                       styleClass="title-label"/>
                <Label text="Spravuj študijné skupiny, úlohy a odovzdávky na jednom mieste."
                       wrapText="true"
                       maxWidth="260"
                       styleClass="subtitle-label"/>
                <VBox spacing="8" styleClass="card">
                    <Label text="Features" styleClass="section-header"/>
                    <Label text="- Tvorba skupín a úloh" styleClass="subtitle-label"/>
                    <Label text="- Odovzdávanie riešení" styleClass="subtitle-label"/>
                    <Label text="- Aktivity log a prehľad" styleClass="subtitle-label"/>
                </VBox>
            </VBox>

            <!-- Right: card with tabs -->
            <StackPane HBox.hgrow="ALWAYS">
                <VBox styleClass="card" spacing="14">
                    <TabPane fx:id="tabPane">
                        <tabs>
                            <Tab text="Prihlásenie" closable="false">
                                <content>
                                    <VBox spacing="10">
                                        <Label text="E-mail"
                                               styleClass="subtitle-label"/>
                                        <TextField fx:id="loginEmailField"
                                                   promptText="tvoj@email.com"/>

                                        <Label text="Heslo"
                                               styleClass="subtitle-label"/>
                                        <PasswordField fx:id="loginPasswordField"
                                                       promptText="••••••••"/>

                                        <HBox spacing="10" alignment="CENTER_RIGHT">
                                            <ProgressIndicator fx:id="progressIndicator"
                                                               visible="false"
                                                               prefWidth="20"
                                                               prefHeight="20"/>
                                            <Region HBox.hgrow="ALWAYS"/>
                                            <Button text="Prihlásiť sa"
                                                    fx:id="loginButton"
                                                    onAction="#onLogin"
                                                    styleClass="primary-button"/>
                                        </HBox>
                                    </VBox>
                                </content>
                            </Tab>

                            <Tab text="Registrácia" closable="false">
                                <content>
                                    <VBox spacing="10">
                                        <Label text="Meno"
                                               styleClass="subtitle-label"/>
                                        <TextField fx:id="registerNameField"
                                                   promptText="Ako ťa volajú?"/>

                                        <Label text="E-mail"
                                               styleClass="subtitle-label"/>
                                        <TextField fx:id="registerEmailField"
                                                   promptText="novy@email.com"/>

                                        <Label text="Heslo"
                                               styleClass="subtitle-label"/>
                                        <PasswordField fx:id="registerPasswordField"
                                                       promptText="Silné heslo"/>

                                        <HBox spacing="10" alignment="CENTER_RIGHT">
                                            <Region HBox.hgrow="ALWAYS"/>
                                            <Button text="Vytvoriť účet"
                                                    fx:id="registerButton"
                                                    onAction="#onRegister"
                                                    styleClass="primary-button"/>
                                        </HBox>
                                    </VBox>
                                </content>
                            </Tab>
                        </tabs>
                    </TabPane>

                    <Label fx:id="statusLabel"
                           text=""
                           styleClass="error-label"/>
                </VBox>
            </StackPane>
        </HBox>
    </center>

</BorderPane>
