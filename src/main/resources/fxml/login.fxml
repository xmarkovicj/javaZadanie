<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.markovic.javazadanie.fx.LoginController">

    <center>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Study Platform" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <TabPane>
                <tabs>
                    <Tab text="Login">
                        <content>
                            <VBox spacing="8" alignment="CENTER_LEFT">
                                <Label text="Email:"/>
                                <TextField fx:id="loginEmailField" promptText="email"/>

                                <Label text="Password:"/>
                                <PasswordField fx:id="loginPasswordField" promptText="password"/>

                                <Button text="Login" onAction="#onLogin"/>
                            </VBox>
                        </content>
                    </Tab>

                    <Tab text="Register">
                        <content>
                            <VBox spacing="8" alignment="CENTER_LEFT">
                                <Label text="Name:"/>
                                <TextField fx:id="regNameField" promptText="name"/>

                                <Label text="Email:"/>
                                <TextField fx:id="regEmailField" promptText="email"/>

                                <Label text="Password:"/>
                                <PasswordField fx:id="regPasswordField" promptText="password"/>

                                <Button text="Register" onAction="#onRegister"/>
                            </VBox>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>

            <Label fx:id="statusLabel" textFill="red"/>

        </VBox>
    </center>
</BorderPane>
