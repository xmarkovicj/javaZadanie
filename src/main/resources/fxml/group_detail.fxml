<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.markovic.javazadanie.fx.GroupDetailController">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="â† Back" onAction="#onBack"/>

            <Label fx:id="groupNameLabel"
                   text="Group name"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Open task" onAction="#onOpenTask"/>
            <Button text="Refresh tasks" onAction="#onRefreshTasks"/>
            <Button text="New task" onAction="#onNewTask"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <TableView fx:id="tasksTable" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colTaskId" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="colTitle" text="Title" prefWidth="200"/>
                    <TableColumn fx:id="colDescription" text="Description" prefWidth="300"/>
                    <TableColumn fx:id="colDueDate" text="Due date" prefWidth="150"/>
                </columns>
            </TableView>

            <Label fx:id="statusLabel" textFill="red"/>
        </VBox>
    </center>
</BorderPane>
