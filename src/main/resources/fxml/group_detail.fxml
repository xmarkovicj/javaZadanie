<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.SplitPane?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.markovic.javazadanie.fx.GroupDetailController"
            stylesheets="@dashboard.css">

    <!-- TOP: názov skupiny + popis + join/leave -->
    <top>
        <VBox spacing="8.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

            <HBox spacing="8.0" alignment="CENTER_LEFT">
                <Button text="← Back"
                        onAction="#onBack"
                        styleClass="secondary-button"/>

                <Label fx:id="groupNameLabel"
                       text="Group name"
                       styleClass="title-label"/>
            </HBox>

            <Label fx:id="groupDescriptionLabel"
                   text="Group description"
                   wrapText="true"
                   styleClass="subtitle-label"/>

            <HBox spacing="8.0">
                <Button fx:id="joinButton"
                        text="Join group"
                        onAction="#onJoinGroup"
                        styleClass="primary-button"/>

                <Button fx:id="leaveButton"
                        text="Leave group"
                        onAction="#onLeaveGroup"
                        styleClass="danger-button"/>
            </HBox>
        </VBox>
    </top>

    <!-- CENTER: hore tasks, dole members -->
    <center>
        <SplitPane orientation="VERTICAL">
            <items>

                <!-- TASKS -->
                <VBox spacing="8.0">
                    <padding>
                        <Insets top="8.0" right="10.0" bottom="8.0" left="10.0"/>
                    </padding>

                    <HBox spacing="8.0" alignment="CENTER_LEFT">
                        <Label text="Tasks" styleClass="section-title"/>

                        <Region HBox.hgrow="ALWAYS"/>

                        <Button text="New task"
                                onAction="#onNewTask"
                                styleClass="primary-button"/>

                        <Button text="Open"
                                onAction="#onOpenTaskDetail"
                                styleClass="secondary-button"/>

                        <Button text="Delete"
                                onAction="#onDeleteTask"
                                styleClass="danger-button"/>
                    </HBox>

                    <TableView fx:id="tasksTable">
                        <columns>
                            <TableColumn fx:id="colTaskId"
                                         text="#"
                                         prefWidth="60.0"/>
                            <TableColumn fx:id="colTitle"
                                         text="Title"
                                         prefWidth="260.0"/>
                            <TableColumn fx:id="colStatus"
                                         text="Status"
                                         prefWidth="140.0"/>
                            <TableColumn fx:id="colDeadline"
                                         text="Deadline"
                                         prefWidth="180.0"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- MEMBERS -->
                <VBox spacing="8.0">
                    <padding>
                        <Insets top="8.0" right="10.0" bottom="10.0" left="10.0"/>
                    </padding>

                    <Label text="Members" styleClass="section-title"/>

                    <TableView fx:id="membersTable">
                        <columns>
                            <TableColumn fx:id="colMemberName"
                                         text="Name"
                                         prefWidth="220.0"/>
                            <TableColumn fx:id="colMemberEmail"
                                         text="Email"
                                         prefWidth="260.0"/>
                        </columns>
                    </TableView>
                </VBox>

            </items>
        </SplitPane>
    </center>

    <!-- BOTTOM: status -->
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <padding>
                <Insets top="6.0" right="10.0" bottom="6.0" left="10.0"/>
            </padding>

            <Label fx:id="statusLabel"
                   text=""
                   styleClass="status-label"/>
        </HBox>
    </bottom>

</BorderPane>
