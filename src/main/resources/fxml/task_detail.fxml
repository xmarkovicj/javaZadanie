<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.markovic.javazadanie.fx.TaskDetailController"
            stylesheets="@dashboard.css">

    <!-- TOP -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="16" bottom="10" left="16"/>
            </padding>

            <Button text="← Späť"
                    onAction="#onBack"
                    styleClass="secondary-button"/>

            <Label fx:id="taskTitleLabel"
                   text="Názov úlohy"
                   styleClass="title-label"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Zmazať úlohu"
                    fx:id="deleteTaskButton"
                    onAction="#onDeleteTask"
                    styleClass="danger-button"/>
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <VBox spacing="12">
            <padding>
                <Insets top="10" right="16" bottom="10" left="16"/>
            </padding>

            <GridPane hgap="10" vgap="6">
                <columnConstraints>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="80"/>
                </columnConstraints>

                <Label text="Stav:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                       styleClass="field-label"/>
                <Label fx:id="statusLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Deadline:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                       styleClass="field-label"/>
                <Label fx:id="deadlineLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Vytvoril:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                       styleClass="field-label"/>
                <Label fx:id="createdByLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            </GridPane>

            <Label text="Popis úlohy" styleClass="section-title"/>
            <TextArea fx:id="descriptionArea"
                      editable="false"
                      wrapText="true"
                      prefRowCount="4"/>

            <Separator/>

            <Label text="Tvoje riešenie" styleClass="section-title"/>

            <TextArea fx:id="solutionArea"
                      promptText="Sem napíš svoje riešenie..."
                      wrapText="true"
                      prefRowCount="6"/>

            <HBox spacing="8" alignment="CENTER_RIGHT">
                <Button text="Obnoviť odovzdania"
                        onAction="#onRefreshSubmissions"
                        styleClass="secondary-button"/>
                <Button text="Odoslať riešenie"
                        onAction="#onSubmitSolution"
                        styleClass="primary-button"/>
            </HBox>

            <Label fx:id="submissionStatusLabel"
                   text=""
                   styleClass="status-label"/>
        </VBox>
    </center>

</BorderPane>
